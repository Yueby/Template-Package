{
  "template": "## [{{FROM_TAG}}] - {{DATE}}\n{{CHANGELOG}}\n",
  "pr_template": "- {{TITLE}} (#{{NUMBER}})",
  "categories": [
    {
      "title": "### ✨ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "### 🔄 Changes",
      "labels": ["changed"]
    },
    {
      "title": "### ⚠️ Deprecated",
      "labels": ["deprecated"]
    },
    {
      "title": "### 🗑️ Removed",
      "labels": ["removed"]
    },
    {
      "title": "### 🐛 Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "### 🔒 Security",
      "labels": ["security"]
    },
    {
      "title": "### 📝 Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "### 🎨 Styles",
      "labels": ["style"]
    },
    {
      "title": "### ⚡ Performance",
      "labels": ["performance"]
    },
    {
      "title": "### 🔧 Maintenance",
      "labels": ["chore"]
    }
  ],
  "transformers": [
    {
      "pattern": "[\\s\\S]*?\\[skip changelog\\][\\s\\S]*",
      "target": "skip"
    }
  ],
  "sort": "ASC",
  "empty_template": "- No significant changes in this release",
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365
} 